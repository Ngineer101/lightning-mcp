{
  "name": "lightning-mcp",
  "version": "1.0.0",
  "description": "CLI tool to generate MCP servers from Swagger/OpenAPI documents",
  "main": "dist/index.js",
  "bin": {
    "lightning-mcp": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/cli.ts",
    "start": "node dist/cli.js",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "mcp",
    "swagger",
    "openapi",
    "cli",
    "typescript"
