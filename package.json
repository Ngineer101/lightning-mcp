    "commander": "14.0.0",
    "handlebars": "4.7.8",
    "openapi-types": "12.1.3",
    "openapi-typescript": "^6.7.1",
    "swagger-parser": "10.0.3"
  },
  "devDependencies": {
    "@types/node": "20.19.1",
    "@typescript-eslint/eslint-plugin": "6.21.0",
    "@typescript-eslint/parser": "6.21.0",
    "eslint": "^8.54.0",
    "tsx": "4.20.3",
    "typescript": "5.8.3"
  }
}
